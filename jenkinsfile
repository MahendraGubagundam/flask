pipeline {
    agent any

    environment {
        SONARQUBE_ENV = 'SonarQube'     // Name from Jenkins config
        PROJECT_NAME = 'python-app'
        VENV = 'venv'
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/MahendraGubagundam/flask.git'
            }
        }

        stage('Setup Python Environment') {
            steps {
                sh '''
                python3 -m venv ${VENV}
                . ${VENV}/bin/activate
                pip install --upgrade pip
                pip install -r requirements.txt
                '''
            }
        }


        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv("sonarQube") {
                    sh '''
                    /opt/sonar-scanner/bin/sonar-scanner -Dsonar.login=squ_119334b3cd0ce4e2321275f0ce754c84cba7aec8
                    '''
                }
            }
        }
        stage('Quality Gate') {
            steps {
                timeout(time: 2, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }

        stage('Deploy Application') {
            steps {
                sh '''
                . ${VENV}/bin/activate
                gunicorn app:app --bind 0.0.0.0:5000 --daemon
                '''
            }
        }
    }

    post {
        success {
            echo "✅ Deployment and SonarQube scan completed successfully"
        }
        failure {
            echo "❌ Pipeline failed"
        }
    }
}

